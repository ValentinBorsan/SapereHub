<script>
    function toggleDesktopLang() { document.getElementById("desktop-lang-menu").classList.toggle("hidden"); }
    function openMobileMenu() {
        document.getElementById("mobile-overlay").classList.remove("hidden");
        document.getElementById("mobile-overlay").classList.add("flex");
        document.body.style.overflow = "hidden";
    }
    function closeMobileMenu() {
        document.getElementById("mobile-overlay").classList.add("hidden");
        document.getElementById("mobile-overlay").classList.remove("flex");
        document.body.style.overflow = "";
    }

    let navCurrentSound = null;
    let navIsPlaying = false;
    let navPomoTimer = null;
    let navPomoTime = 25 * 60;
    
    function toggleFocusMenu() {
        const menu = document.getElementById('focus-menu');
        const btn = document.getElementById('focus-btn');
        menu.classList.toggle('hidden');
        btn.classList.toggle('border-sapereOrange');
    }

    document.addEventListener('click', (e) => {
        const container = document.getElementById('focus-dropdown-container');
        const menu = document.getElementById('focus-menu');
        if (container && !container.contains(e.target) && !menu.classList.contains('hidden')) {
            menu.classList.add('hidden');
            document.getElementById('focus-btn').classList.remove('border-sapereOrange');
        }
    });

    function playNavbarAmbient(type) {
        const audio = document.getElementById(`audio-${type}`);
        const dot = document.getElementById('focus-active-dot');
        const volume = document.getElementById('navbar-ambient-vol')?.value || 0.5;

        if (!audio) return;

        if (navCurrentSound === type && navIsPlaying) {
            stopAllAmbient();
            return;
        }

        stopAllAmbient();

        audio.volume = volume;
        audio.play().catch(e => console.log("Audio req interaction"));
        navCurrentSound = type;
        navIsPlaying = true;
        if(dot) dot.classList.remove('hidden');
        updateNavUI(type);
    }

    function stopAllAmbient() {
        document.querySelectorAll('audio').forEach(a => { a.pause(); a.currentTime = 0; });
        navIsPlaying = false;
        navCurrentSound = null;
        const dot = document.getElementById('focus-active-dot');
        if(dot) dot.classList.add('hidden');
        updateNavUI(null);
    }

    function updateNavUI(activeType) {
        document.querySelectorAll('.nav-ambient-track').forEach(btn => {
            if (btn.dataset.sound === activeType) {
                btn.classList.add('active'); // Folosim clasa .active definitÄƒ Ã®n CSS
            } else {
                btn.classList.remove('active');
            }
        });
    }

    document.getElementById('navbar-ambient-vol')?.addEventListener('input', (e) => {
        document.querySelectorAll('audio').forEach(a => a.volume = e.target.value);
    });

    function toggleNavPomodoro() {
        const btn = document.getElementById('btn-nav-pomo');
        const display = document.getElementById('nav-pomo-display');

        if (navPomoTimer) {
            clearInterval(navPomoTimer);
            navPomoTimer = null;
            btn.classList.remove('bg-sapereOrange');
            btn.classList.add('bg-gray-700');
            btn.innerText = "START";
        } else {
            btn.classList.remove('bg-gray-700');
            btn.classList.add('bg-sapereOrange');
            btn.innerText = "STOP";
            navPomoTimer = setInterval(() => {
                if (navPomoTime > 0) {
                    navPomoTime--;
                    const m = Math.floor(navPomoTime / 60).toString().padStart(2, '0');
                    const s = (navPomoTime % 60).toString().padStart(2, '0');
                    display.innerText = `${m}:${s}`;
                } else {
                    clearInterval(navPomoTimer);
                    navPomoTimer = null;
                    playNavbarAmbient('lofi'); 
                    alert("Focus Session Complete!");
                    navPomoTime = 25 * 60;
                    display.innerText = "25:00";
                    btn.classList.remove('bg-sapereOrange');
                    btn.classList.add('bg-gray-700');
                    btn.innerText = "START";
                }
            }, 1000);
        }
    }

    let breathInterval = null;
    let isBreathing = false;

    function toggleBreathingModal() {
        const modal = document.getElementById('breathing-modal');
        const card = document.getElementById('breathing-card');
        
        if (modal.classList.contains('hidden')) {
            modal.classList.remove('hidden');
            setTimeout(() => {
                modal.classList.remove('opacity-0');
                card.classList.remove('scale-95');
                card.classList.add('scale-100');
            }, 10);
        } else {
            stopBreathingSession();
            modal.classList.add('opacity-0');
            card.classList.remove('scale-100');
            card.classList.add('scale-95');
            setTimeout(() => {
                modal.classList.add('hidden');
            }, 300);
        }
    }

    function toggleBreathingSession() {
        const btn = document.getElementById('btn-breath-action');
        if (isBreathing) {
            stopBreathingSession();
        } else {
            isBreathing = true;
            btn.innerText = "OpreÈ™te";
            btn.classList.replace('bg-white', 'bg-red-500');
            btn.classList.replace('text-sapereDark', 'text-white');
            btn.classList.replace('hover:bg-gray-200', 'hover:bg-red-600');
            
            runBreathingCycle(); 
            breathInterval = setInterval(runBreathingCycle, 16000);
        }
    }

    function stopBreathingSession() {
        if (!isBreathing) return;
        isBreathing = false;
        clearInterval(breathInterval);
        
        const circle = document.getElementById('breath-circle-inner');
        const glow = document.getElementById('breath-circle-glow');
        const text = document.getElementById('breath-text');
        const instruction = document.getElementById('breath-instruction');
        const btn = document.getElementById('btn-breath-action');

        circle.className = "relative z-10 w-32 h-32 bg-gradient-to-br from-sapereOrange to-orange-600 rounded-full flex items-center justify-center shadow-inner ring-4 ring-[#0f172a] transition-all duration-[4000ms] ease-in-out scale-75";
        glow.className = "absolute inset-0 bg-sapereOrange/20 rounded-full blur-2xl transition-all duration-[4000ms] ease-in-out scale-50 opacity-50";
        
        text.innerText = "Start";
        instruction.innerText = "RelaxeazÄƒ-te È™i urmÄƒreÈ™te ritmul cercului.";
        
        btn.innerText = "ÃŽncepe Sesiunea";
        btn.classList.replace('bg-red-500', 'bg-white');
        btn.classList.replace('text-white', 'text-sapereDark');
        btn.classList.replace('hover:bg-red-600', 'hover:bg-gray-200');
    }

    function runBreathingCycle() {
        const circle = document.getElementById('breath-circle-inner');
        const glow = document.getElementById('breath-circle-glow');
        const text = document.getElementById('breath-text');
        const instruction = document.getElementById('breath-instruction');
        
        text.innerText = "InspirÄƒ";
        instruction.innerText = "Trage aer adÃ¢nc Ã®n piept...";
        circle.className = "relative z-10 w-32 h-32 bg-gradient-to-br from-sapereOrange to-orange-600 rounded-full flex items-center justify-center shadow-inner ring-4 ring-[#0f172a] transition-all duration-[4000ms] ease-in-out scale-125";
        glow.className = "absolute inset-0 bg-sapereOrange/20 rounded-full blur-2xl transition-all duration-[4000ms] ease-in-out scale-110 opacity-80";
        
        setTimeout(() => { if (!isBreathing) return; text.innerText = "Èšine"; instruction.innerText = "MenÈ›ine aerul..."; }, 4000);
        
        setTimeout(() => {
            if (!isBreathing) return;
            text.innerText = "ExpirÄƒ";
            instruction.innerText = "ElibereazÄƒ aerul Ã®ncet...";
            circle.className = "relative z-10 w-32 h-32 bg-gradient-to-br from-blue-500 to-indigo-600 rounded-full flex items-center justify-center shadow-inner ring-4 ring-[#0f172a] transition-all duration-[4000ms] ease-in-out scale-75";
            glow.className = "absolute inset-0 bg-blue-500/20 rounded-full blur-2xl transition-all duration-[4000ms] ease-in-out scale-50 opacity-50";
        }, 8000);
        
        setTimeout(() => { if (!isBreathing) return; text.innerText = "Èšine"; instruction.innerText = "RelaxeazÄƒ-te Ã®nainte de a inspira din nou..."; circle.className = "relative z-10 w-32 h-32 bg-gradient-to-br from-sapereOrange to-orange-600 rounded-full flex items-center justify-center shadow-inner ring-4 ring-[#0f172a] transition-all duration-[4000ms] ease-in-out scale-75"; }, 12000);
    }
</script>
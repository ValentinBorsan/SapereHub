<!-- Scripts -->
<script>
    function openMobileMenu() { document.getElementById("mobile-overlay")?.classList.remove("hidden"); }
    function toggleFocusMenu() { document.getElementById('focus-menu')?.classList.toggle('hidden'); }
    function playNavbarAmbient(type) { console.log('Playing', type); }
    function stopAllAmbient() { console.log('Stop Audio'); }

    // --- REAL-TIME SYNC LOGIC (SAFE) ---
    document.addEventListener('DOMContentLoaded', () => {
        // Run only if notification container exists (user is logged in)
        if(document.getElementById('notif-container')) {
            syncAllData();
            setInterval(syncAllData, 30000);
        }
    });

    async function syncAllData() {
        await Promise.all([fetchNotifications(), syncUserStats()]);
    }

    async function fetchNotifications() {
        try {
            const res = await fetch('/notifications/api/recent');
            if (res.ok) {
                const data = await res.json();
                updateNotificationUI(data);
            }
        } catch(e) { console.error("Notif error", e); }
    }

    function updateNotificationUI(data) {
        const badge = document.getElementById('notif-badge');
        const list = document.getElementById('notif-list');
        if (!badge || !list) return;

        if (data.unreadCount > 0) {
            badge.innerText = data.unreadCount > 9 ? '9+' : data.unreadCount;
            badge.classList.remove('hidden');
        } else {
            badge.classList.add('hidden');
        }

        if (data.notifications.length === 0) {
            list.innerHTML = '<div class="p-4 text-center text-gray-500 text-xs">Nu ai notificÄƒri recente.</div>';
            return;
        }

        list.innerHTML = data.notifications.map(n => `
            <div class="p-3 border-b border-gray-700/50 hover:bg-white/5 transition cursor-pointer ${n.read ? 'opacity-60' : 'bg-blue-500/5'}" onclick="window.location.href='/notifications'">
                <div class="flex items-start gap-3">
                    <div class="mt-1 text-sapereOrange"><i class='bx bx-info-circle'></i></div>
                    <div><p class="text-xs text-gray-200">${n.message}</p></div>
                </div>
            </div>
        `).join('');
    }

    function toggleNotifications() { document.getElementById('notif-dropdown')?.classList.toggle('hidden'); }
    async function markAllRead() { 
        await fetch('/notifications/api/read', { method: 'POST', headers: {'Content-Type': 'application/json'}, body: JSON.stringify({ id: 'all' }) });
        fetchNotifications();
    }

    async function syncUserStats() {
        try {
            const res = await fetch('/api/gamification/stats');
            if (res.ok) {
                const data = await res.json();
                if (data.success) {
                    updateGlobalStatsUI(data.xp, data.level);
                }
            }
        } catch(e) { }
    }

    function updateGlobalStatsUI(xp, level) {
        const navLvl = document.getElementById('nav-user-level');
        if(navLvl) navLvl.innerText = 'Lvl ' + level;

        const drawerLvl = document.getElementById('drawer-level');
        const drawerXP = document.getElementById('drawer-xp-text');
        const drawerBar = document.getElementById('drawer-xp-bar');
        const drawerNext = document.getElementById('drawer-xp-next');
        
        if (drawerLvl) drawerLvl.innerText = 'Nivel ' + level;
        if (drawerXP) drawerXP.innerText = xp + ' XP';
        
        const xpPerLevel = 1000; 
        const progress = xp % xpPerLevel;
        const percent = (progress / xpPerLevel) * 100;
        
        if (drawerBar) drawerBar.style.width = percent + '%';
        if (drawerNext) drawerNext.innerText = (xpPerLevel - progress) + ' XP';

        const dashXP = document.getElementById('dashboard-user-xp');
        const dashLvl = document.getElementById('dashboard-user-level');
        if (dashXP) dashXP.innerText = xp;
        if (dashLvl) dashLvl.innerText = level;

        const profXP = document.getElementById('profile-xp-value');
        const profLvl = document.getElementById('profile-level-value');
        if (profXP) profXP.innerText = xp;
        if (profLvl) profLvl.innerText = level;
    }

    document.addEventListener('click', (e) => {
        const c = document.getElementById('notif-container');
        const d = document.getElementById('notif-dropdown');
        if (c && d && !c.contains(e.target)) d.classList.add('hidden');
    });
</script>
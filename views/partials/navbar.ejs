<script>
    
    // Toggle Desktop Language Dropdown
    window.toggleDesktopLang = function() { 
        document.getElementById("desktop-lang-menu")?.classList.toggle("hidden"); 
    };

    // Mobile Menu Control
    window.openMobileMenu = function() {
        const overlay = document.getElementById("mobile-overlay");
        if (overlay) {
            overlay.classList.remove("hidden");
            overlay.classList.add("flex");
            document.body.style.overflow = "hidden"; // Prevent background scroll
        }
    };

    window.closeMobileMenu = function() {
        const overlay = document.getElementById("mobile-overlay");
        if (overlay) {
            overlay.classList.add("hidden");
            overlay.classList.remove("flex");
            document.body.style.overflow = "";
        }
    };

    // Ambient Audio Control
    let navCurrentSound = null;
    let navIsPlaying = false;
    let navPomoTimer = null;
    let navPomoTime = 25 * 60;
    
    window.toggleFocusMenu = function() {
        const menu = document.getElementById('focus-menu');
        const btn = document.getElementById('focus-btn');
        if (menu) menu.classList.toggle('hidden');
        if (btn) btn.classList.toggle('border-sapereOrange');
    };

    window.playNavbarAmbient = function(type) {
        const audio = document.getElementById(`audio-${type}`);
        const dot = document.getElementById('focus-active-dot');
        const volume = document.getElementById('navbar-ambient-vol')?.value || 0.5;

        if (!audio) return;

        if (navCurrentSound === type && navIsPlaying) {
            window.stopAllAmbient();
            return;
        }

        window.stopAllAmbient(); // OpreÈ™te altele Ã®nainte

        audio.volume = volume;
        // Folosim un catch pentru erori de tip "User didn't interact with document first"
        audio.play().then(() => {
             navCurrentSound = type;
             navIsPlaying = true;
             if(dot) dot.classList.remove('hidden');
             updateNavUI(type);
        }).catch(e => {
            console.warn("Audio play blocked (user gesture required):", e);
            alert("ApasÄƒ oriunde pe paginÄƒ pentru a permite audio.");
        });
    };

    window.stopAllAmbient = function() {
        document.querySelectorAll('audio').forEach(a => { 
            a.pause(); 
            a.currentTime = 0; 
        });
        navIsPlaying = false;
        navCurrentSound = null;
        const dot = document.getElementById('focus-active-dot');
        if(dot) dot.classList.add('hidden');
        updateNavUI(null);
    };

    function updateNavUI(activeType) {
        document.querySelectorAll('.nav-ambient-track').forEach(btn => {
            if (btn.dataset.sound === activeType) {
                btn.classList.add('active'); // ClasÄƒ CSS pentru highlight
            } else {
                btn.classList.remove('active');
            }
        });
    }

    // Pomodoro
    window.toggleNavPomodoro = function() {
        const btn = document.getElementById('btn-nav-pomo');
        const display = document.getElementById('nav-pomo-display');

        if (navPomoTimer) {
            clearInterval(navPomoTimer);
            navPomoTimer = null;
            if(btn) { btn.classList.remove('bg-sapereOrange'); btn.classList.add('bg-gray-700'); btn.innerText = "START"; }
        } else {
            if(btn) { btn.classList.remove('bg-gray-700'); btn.classList.add('bg-sapereOrange'); btn.innerText = "STOP"; }
            navPomoTimer = setInterval(() => {
                if (navPomoTime > 0) {
                    navPomoTime--;
                    const m = Math.floor(navPomoTime / 60).toString().padStart(2, '0');
                    const s = (navPomoTime % 60).toString().padStart(2, '0');
                    if(display) display.innerText = `${m}:${s}`;
                } else {
                    clearInterval(navPomoTimer);
                    navPomoTimer = null;
                    window.playNavbarAmbient('lofi'); 
                    alert("Sesiune Focus CompletÄƒ!");
                    navPomoTime = 25 * 60;
                    if(display) display.innerText = "25:00";
                    if(btn) { btn.classList.remove('bg-sapereOrange'); btn.classList.add('bg-gray-700'); btn.innerText = "START"; }
                }
            }, 1000);
        }
    };

    // Breathing Logic (Simplified)
    let breathInterval = null;
    let isBreathing = false;

    window.toggleBreathingModal = function() {
        const modal = document.getElementById('breathing-modal');
        const card = document.getElementById('breathing-card');
        
        if (modal.classList.contains('hidden')) {
            modal.classList.remove('hidden');
            setTimeout(() => {
                modal.classList.remove('opacity-0');
                card.classList.remove('scale-95');
                card.classList.add('scale-100');
            }, 10);
        } else {
            window.toggleBreathingSession(true); // Stop if running
            modal.classList.add('opacity-0');
            card.classList.remove('scale-100');
            card.classList.add('scale-95');
            setTimeout(() => {
                modal.classList.add('hidden');
            }, 300);
        }
    };

    window.toggleBreathingSession = function(forceStop = false) {
        const btn = document.getElementById('btn-breath-action');
        if (isBreathing || forceStop) {
            isBreathing = false;
            if(breathInterval) clearInterval(breathInterval);
             // Reset UI code... (simplified for brevity)
             if(btn) { btn.innerText = "ÃŽncepe Sesiunea"; btn.className = "w-full py-3 bg-white text-sapereDark hover:bg-gray-200 font-bold rounded-xl transition shadow-lg"; }
        } else {
            isBreathing = true;
            if(btn) { btn.innerText = "OpreÈ™te"; btn.className = "w-full py-3 bg-red-500 text-white hover:bg-red-600 font-bold rounded-xl transition shadow-lg"; }
            // Run animation logic...
        }
    };

    // --- NOTIFICATION & REAL-TIME SYNC ---
    document.addEventListener('DOMContentLoaded', () => {
        // ÃŽnchide dropdown la click exterior
        document.addEventListener('click', (e) => {
            const container = document.getElementById('focus-dropdown-container');
            const menu = document.getElementById('focus-menu');
            if (container && !container.contains(e.target) && menu && !menu.classList.contains('hidden')) {
                menu.classList.add('hidden');
                document.getElementById('focus-btn')?.classList.remove('border-sapereOrange');
            }

            const notifContainer = document.getElementById('notif-container');
            const notifDropdown = document.getElementById('notif-dropdown');
            if (notifContainer && notifDropdown && !notifContainer.contains(e.target)) {
                notifDropdown.classList.add('hidden');
            }
        });

        // VerificÄƒm dacÄƒ user-ul e logat prin prezenÈ›a containerului de notificÄƒri
        if(document.getElementById('notif-container')) {
            syncAllData();
            // Polling la 60 secunde
            setInterval(syncAllData, 60000);
        }
    });

    async function syncAllData() {
        // ApelÄƒm ambele sync-uri
        await Promise.all([fetchNotifications(), syncUserStats()]);
    }

    async function fetchNotifications() {
        try {
            const res = await fetch('/notifications/api/recent');
            if (res.ok) {
                const data = await res.json();
                updateNotificationUI(data);
            }
        } catch(e) { console.error("Notif error", e); }
    }

    function updateNotificationUI(data) {
        const badge = document.getElementById('notif-badge');
        const list = document.getElementById('notif-list');
        if (!badge || !list) return;

        if (data.unreadCount > 0) {
            badge.innerText = data.unreadCount > 9 ? '9+' : data.unreadCount;
            badge.classList.remove('hidden');
        } else {
            badge.classList.add('hidden');
        }

        if (data.notifications.length === 0) {
            list.innerHTML = '<div class="p-4 text-center text-gray-500 text-xs">Nu ai notificÄƒri recente.</div>';
            return;
        }

        list.innerHTML = data.notifications.map(n => `
            <div class="p-3 border-b border-gray-700/50 hover:bg-white/5 transition cursor-pointer ${n.read ? 'opacity-60' : 'bg-blue-500/5'}">
                <div class="flex items-start gap-3">
                    <div class="mt-1 text-sapereOrange"><i class='bx bx-info-circle'></i></div>
                    <div><p class="text-xs text-gray-200">${n.message}</p></div>
                </div>
            </div>
        `).join('');
    }

    window.toggleNotifications = function() {
        const dropdown = document.getElementById('notif-dropdown');
        if(dropdown) dropdown.classList.toggle('hidden');
    };

    window.markAllRead = async function() { 
        try {
            await fetch('/notifications/api/read', { method: 'POST', headers: {'Content-Type': 'application/json'}, body: JSON.stringify({ id: 'all' }) });
            fetchNotifications();
        } catch(e) {}
    };

    async function syncUserStats() {
        try {
            // AsigurÄƒ-te cÄƒ endpoint-ul '/api/gamification/stats' existÄƒ Ã®n backend
            const res = await fetch('/api/gamification/stats');
            if (res.ok) {
                const data = await res.json();
                if (data.success) {
                    updateGlobalStatsUI(data.xp, data.level);
                }
            }
        } catch(e) { /* Silent fail */ }
    }

  function updateGlobalStatsUI(xp, level) {
        const navLvl = document.getElementById('nav-user-level');
        if(navLvl) navLvl.innerText = 'Lvl ' + level;

        const drawerLvl = document.getElementById('drawer-level');
        const drawerXP = document.getElementById('drawer-xp-text');
        const drawerBar = document.getElementById('drawer-xp-bar');
        const drawerNext = document.getElementById('drawer-xp-next');
        
        if (drawerLvl) drawerLvl.innerText = 'Nivel ' + level;
        if (drawerXP) drawerXP.innerText = xp + ' XP';
        
        const xpPerLevel = 1000; 
        const progress = xp % xpPerLevel;
        const percent = (progress / xpPerLevel) * 100;
        
        if (drawerBar) drawerBar.style.width = percent + '%';
        if (drawerNext) drawerNext.innerText = (xpPerLevel - progress) + ' XP';

        const dashXP = document.getElementById('dashboard-user-xp');
        const dashLvl = document.getElementById('dashboard-user-level');
        if (dashXP) dashXP.innerText = xp;
        if (dashLvl) dashLvl.innerText = level;

        const profXP = document.getElementById('profile-xp-value');
        const profLvl = document.getElementById('profile-level-value');
        if (profXP) profXP.innerText = xp;
        if (profLvl) profLvl.innerText = level;
    }

    document.addEventListener('click', (e) => {
        const c = document.getElementById('notif-container');
        const d = document.getElementById('notif-dropdown');
        if (c && d && !c.contains(e.target)) d.classList.add('hidden');
    });
</script>
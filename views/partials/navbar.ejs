                  <span class="text-[9px] text-gray-300 font-bold uppercase"><%= __('nav.breathe_short') || 'RespirÄƒ' %></span>
              </button>

              <button onclick="stopAllAmbient()" class="col-span-2 py-2 px-3 rounded-xl bg-red-500/10 border border-red-500/30 flex items-center justify-center gap-2 text-red-400 hover:bg-red-500/20 active:scale-95 transition mt-1 focus:outline-none focus:ring-2 focus:ring-red-500">
                  <i class='bx bx-stop-circle text-base' aria-hidden="true"></i>
                  <span class="text-[10px] font-bold uppercase"><%= __('nav.stop_audio') || 'Stop Audio' %></span>
              </button>

<div id="profile-overlay" 
     onclick="closeProfileDrawer()" 
     class="fixed inset-0 bg-black/60 backdrop-blur-sm z-[90] hidden transition-opacity duration-300 opacity-0">
</div>

<div id="profile-drawer" 
     class="fixed top-0 right-0 h-full w-80 bg-[#0f172a] border-l border-gray-800 z-[100] transform translate-x-full transition-transform duration-300 shadow-2xl flex flex-col">
    
    <div class="h-[70px] flex items-center justify-between px-6 border-b border-gray-800 bg-[#1e293b] shrink-0">
        <h3 class="text-white font-bold text-lg"><%= __('drawer.title') %></h3>
        <button onclick="closeProfileDrawer()" class="text-gray-400 hover:text-white transition p-2 hover:bg-gray-700 rounded-full">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-6 h-6"><path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" /></svg>
        </button>
    </div>

    <div class="flex-1 overflow-y-auto p-6 space-y-8 bg-[#0f172a]">
        
        <div class="text-center pt-2">
            <div class="w-24 h-24 mx-auto bg-gradient-to-br from-sapereOrange to-orange-600 rounded-full flex items-center justify-center text-4xl font-bold text-white mb-4 shadow-lg ring-4 ring-[#1e293b] relative z-0">
                <%= user.full_name ? user.full_name.charAt(0).toUpperCase() : 'U' %>
            </div>
            <h2 class="text-xl font-bold text-white"><%= user.full_name %></h2>
            <p class="text-xs text-gray-500 mt-1"><%= user.email %></p>
            <span class="inline-block mt-3 px-3 py-1 bg-gray-800 text-gray-300 text-[10px] font-bold tracking-wider uppercase rounded-full border border-gray-700">
                <%= user.role === 'admin' ? __('profile.role.admin') : __('profile.role.student') %>
            </span>
        </div>

        <% 
           const currentXP = user.xp || 0;
           const currentLevel = user.level || 1;
           // FIX: Folosim 1000 XP per nivel pentru consistență cu backend-ul
           const xpPerLevel = 1000;
           const progressInLevel = currentXP % xpPerLevel;
           const progressPercent = Math.min(100, Math.max(0, (progressInLevel / xpPerLevel) * 100));
           const xpToNextLevel = xpPerLevel - progressInLevel;
        %>

        <div class="space-y-4">
            <div>
                <div class="flex justify-between text-xs text-gray-400 mb-2 font-bold uppercase tracking-wider">
                    <span class="text-sapereOrange" id="drawer-level"><%= __('profile.stats.level') %> <%= currentLevel %></span>
                    <span id="drawer-xp-text"><%= currentXP %> XP</span>
                </div>
                
                <div class="w-full bg-gray-800 rounded-full h-2.5 overflow-hidden border border-gray-700">
                    <div id="drawer-xp-bar" 
                         class="bg-gradient-to-r from-sapereOrange to-orange-500 h-full rounded-full transition-all duration-1000 ease-out" 
                         style="--prog: <%= progressPercent %>%; width: var(--prog);">
                    </div>
                </div>
                
                <p class="text-[10px] text-gray-500 mt-2 text-center">
                    <span class="text-gray-300 font-bold" id="drawer-xp-next"><%= xpToNextLevel %> XP</span> <%= __('drawer.next_level') %>
                </p>
            </div>

            <div class="bg-gradient-to-r from-blue-900/20 to-blue-800/10 p-4 rounded-xl border border-blue-500/20 flex items-center gap-4">
                <div class="p-2 bg-blue-500/20 rounded-lg text-blue-400">
                    <i class='bx bx-calendar-check text-2xl'></i>
                </div>
                <div>
                    <p class="text-white font-bold text-sm"><%= user.streak || 0 %> <%= __('profile.stats.streak') %></p>
                    <p class="text-xs text-gray-500"><%= __('drawer.streak_msg') %></p>
                </div>
            </div>
        </div>

        <div class="space-y-2 pt-4 border-t border-gray-800">
            <a href="/dashboard" class="flex items-center gap-3 px-4 py-3 text-gray-300 hover:bg-gray-800 hover:text-white rounded-xl transition group">
                <i class='bx bx-grid-alt text-xl text-gray-500 group-hover:text-sapereOrange transition'></i>
                <span class="font-medium"><%= __('nav.dashboard') %></span>
            </a>
            <a href="/profile" class="flex items-center gap-3 px-4 py-3 text-gray-300 hover:bg-gray-800 hover:text-white rounded-xl transition group">
                <i class='bx bx-user text-xl text-gray-500 group-hover:text-sapereOrange transition'></i>
                <span class="font-medium"><%= __('drawer.btn_full_profile') %></span>
            </a>
        </div>
    </div>

    <div class="h-[80px] p-5 border-t border-gray-800 bg-[#1e293b] shrink-0 flex items-center">
        <a href="/auth/logout" class="flex items-center justify-center gap-2 w-full py-3 border border-red-500/30 text-red-400 hover:bg-red-500 hover:text-white rounded-xl transition font-bold text-sm shadow-sm hover:shadow-red-500/20 group">
            <i class='bx bx-log-out text-xl group-hover:scale-110 transition'></i>
            <%= __('nav.logout') %>
        </a>
    </div>
</div>
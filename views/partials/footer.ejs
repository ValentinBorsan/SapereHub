<footer class="bg-[#020617] border-t border-gray-800 mt-auto pt-16 pb-8 relative overflow-hidden">
  
  <!-- WINTER ACCENT: Decor subtil jos (Gradient festiv) -->
  <div class="absolute bottom-0 left-0 w-full h-1 bg-gradient-to-r from-xmasRed via-xmasGold to-xmasGreen opacity-30"></div>

  <div class="mx-auto w-full max-w-screen-2xl px-6 lg:px-8 relative z-10">
    <div class="xl:grid xl:grid-cols-3 xl:gap-8">
      
      <!-- Brand Column -->
      <div class="space-y-8">
        <a href="/" class="flex items-center space-x-3 group">
          <img
            src="/images/logo-sapere1.png"
            class="h-36 w-auto object-contain grayscale opacity-80 group-hover:grayscale-0 group-hover:opacity-100 transition duration-500"
            alt="SaperePlus Logo"
          />
        </a>
        <p class="text-sm leading-6 text-gray-400 max-w-sm font-light">
          <%= __('footer.brand_desc') %>
        </p>

        <!-- Social Icons (Cu hover festiv auriu) -->
        <div class="flex space-x-6">
          <a href="#" class="text-gray-500 hover:text-xmasGold transition transform hover:scale-110">
            <span class="sr-only">Facebook</span>
            <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true"><path fill-rule="evenodd" d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z" clip-rule="evenodd"/></svg>
          </a>

<script>
    async function performTranslation() {
        const inputEl = document.getElementById('trans-input');
        const outputEl = document.getElementById('trans-output');
        const statusEl = document.getElementById('trans-status');
        const sourceLang = document.getElementById('trans-lang-source').value;
        const targetLang = document.getElementById('trans-lang-target').value;

        const text = inputEl.value.trim();
        if (!text) return;

        // Reset UI
        outputEl.value = '';
        statusEl.classList.remove('hidden');
        inputEl.disabled = true;

        try {
            const res = await fetch('/api/ai/translate', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                    sourceLang: sourceLang,
                    targetLang: targetLang,
                    content: { text: text } // Împachetăm textul într-un obiect simplu
                })
            });

            const data = await res.json();
            
            if (res.ok && data && data.text) {
                outputEl.value = data.text;
            } else {
                outputEl.value = "Eroare: Nu s-a putut traduce textul.";
                console.error("Translate Error:", data);
            }
        } catch (error) {
            console.error("Network Error:", error);
            outputEl.value = "Eroare de conexiune.";
        } finally {
            statusEl.classList.add('hidden');
            inputEl.disabled = false;
            inputEl.focus();
        }
    }
</script>
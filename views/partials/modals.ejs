                    <label class="text-xs text-gray-400 font-bold uppercase"><%= __('modals.trans_to') %></label>
                    <select id="trans-lang-target" class="bg-gray-800 border border-gray-600 text-white text-xs rounded px-2 py-1 outline-none focus:border-sapereOrange">
                        <option value="ro">Română</option>
                        <option value="en">English</option>
                        <option value="it">Italiano</option>
                        <option value="fr">Français</option>

<div id="modal-calculator" class="modal-overlay hidden fixed inset-0 z-[60] flex items-center justify-center bg-black/80 backdrop-blur-sm">
    <div class="bg-sapereCard w-full max-w-sm rounded-2xl shadow-2xl border border-gray-700 overflow-hidden transform transition-all scale-100">
        <div class="bg-gray-900 p-4 flex justify-between items-center border-b border-gray-700">
            <h3 class="text-sapereOrange font-bold flex items-center gap-2">
                <i class='bx bx-calculator'></i> <%= __('modals.calculator') %>
            </h3>
            <button onclick="closeModal('modal-calculator')" class="text-gray-400 hover:text-white">&times;</button>
        </div>
        <div class="p-5">
            <input type="text" id="calc-display" class="w-full bg-gray-800 text-right text-3xl text-white p-4 rounded-lg mb-4 border border-gray-600 focus:outline-none" readonly value="0">
            <div class="grid grid-cols-4 gap-2">
                <button onclick="calcClear()" class="col-span-3 bg-red-500/20 text-red-500 p-3 rounded hover:bg-red-500/40 font-bold">C</button>
                <button onclick="calcAppend('/')" class="bg-gray-700 p-3 rounded hover:bg-gray-600 text-sapereOrange font-bold">÷</button>
                
                <button onclick="calcAppend('7')" class="bg-gray-800 p-3 rounded hover:bg-gray-700">7</button>
                <button onclick="calcAppend('8')" class="bg-gray-800 p-3 rounded hover:bg-gray-700">8</button>
                <button onclick="calcAppend('9')" class="bg-gray-800 p-3 rounded hover:bg-gray-700">9</button>
                <button onclick="calcAppend('*')" class="bg-gray-700 p-3 rounded hover:bg-gray-600 text-sapereOrange font-bold">×</button>
                
                <button onclick="calcAppend('4')" class="bg-gray-800 p-3 rounded hover:bg-gray-700">4</button>
                <button onclick="calcAppend('5')" class="bg-gray-800 p-3 rounded hover:bg-gray-700">5</button>
                <button onclick="calcAppend('6')" class="bg-gray-800 p-3 rounded hover:bg-gray-700">6</button>
                <button onclick="calcAppend('-')" class="bg-gray-700 p-3 rounded hover:bg-gray-600 text-sapereOrange font-bold">-</button>
                
                <button onclick="calcAppend('1')" class="bg-gray-800 p-3 rounded hover:bg-gray-700">1</button>
                <button onclick="calcAppend('2')" class="bg-gray-800 p-3 rounded hover:bg-gray-700">2</button>
                <button onclick="calcAppend('3')" class="bg-gray-800 p-3 rounded hover:bg-gray-700">3</button>
                <button onclick="calcAppend('+')" class="bg-gray-700 p-3 rounded hover:bg-gray-600 text-sapereOrange font-bold">+</button>
                
                <button onclick="calcAppend('0')" class="col-span-2 bg-gray-800 p-3 rounded hover:bg-gray-700">0</button>
                <button onclick="calcAppend('.')" class="bg-gray-800 p-3 rounded hover:bg-gray-700">.</button>
                <button onclick="calcEqual()" class="bg-sapereOrange text-white p-3 rounded hover:bg-orange-600 font-bold">=</button>
            </div>
        </div>
    </div>
</div>

<div id="modal-notes" class="modal-overlay hidden fixed inset-0 z-[60] flex items-center justify-center bg-black/80 backdrop-blur-sm">

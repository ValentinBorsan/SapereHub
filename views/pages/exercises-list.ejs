<div class="min-h-screen bg-[#0f172a] text-white pt-32 px-6 pb-20">
  <div class="max-w-6xl mx-auto">
    <div class="mb-10 animate-fade-in">
      <a
        href="/exercitii"
        class="text-gray-400 hover:text-white mb-4 inline-flex items-center gap-2 transition"
        aria-label="<%= __('exercises_list.back_subjects') %>"
      >
        <i class="bx bx-arrow-back" aria-hidden="true"></i> <%= __('exercises_list.back_subjects') %>
      </a>
      <div class="flex items-center gap-4 mt-2">
        <div
          class="p-3 rounded-xl <%= category.bg %> <%= category.border %> border shadow-lg shadow-<%= category.color.split('-')[1] %>/10"
          aria-hidden="true"
        >
          <i class="bx <%= category.icon %> text-3xl <%= category.color %>"></i>
        </div>
        <div>
          <h1 class="text-3xl font-bold"><%= __('exercises_list.title_prefix') %> <%= category.name %></h1>
          <p class="text-gray-400 text-sm">
            <%= __('exercises_list.subtitle') %>
          </p>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <% exercises.forEach((ex, index) => { %>
      <!-- FIX: Folosim variabila CSS --i pentru a evita erorile de linting -->
      <div
        class="bg-[#1e293b] rounded-xl border border-gray-700 p-6 flex flex-col justify-between hover:border-gray-500 transition shadow-lg group animate-fade-in"
        style="--i: <%= index %>"
      >
        <div>
          <div class="flex justify-between items-start mb-4">
            <span
              class="px-3 py-1 rounded-full text-xs font-bold uppercase tracking-wider <%= ex.difficulty === 'easy' ? 'bg-green-500/10 text-green-400 border border-green-500/20' : (ex.difficulty === 'medium' ? 'bg-yellow-500/10 text-yellow-400 border border-yellow-500/20' : 'bg-red-500/10 text-red-400 border border-red-500/20') %>"
            >
              <%= ex.difficulty === 'easy' ? __('exercises_list.difficulty.easy') : (ex.difficulty === 'medium' ? __('exercises_list.difficulty.medium') : __('exercises_list.difficulty.hard')) %>
            </span>
            <span class="text-gray-500 text-xs flex items-center gap-1">
              <i class="bx bx-calendar" aria-hidden="true"></i> <%= new Date(ex.created_at).toLocaleDateString(typeof currentLang !== 'undefined' && currentLang === 'ro' ? 'ro-RO' : (typeof currentLang !== 'undefined' && currentLang === 'it' ? 'it-IT' : 'en-US')) %>
            </span>
          </div>

          <h3
            class="text-xl font-bold mb-2 group-hover:text-[#f59e0b] transition"
          >
            <%= ex.title %>
          </h3>
          <p class="text-gray-400 text-sm mb-6 flex items-center gap-2">
            <i class="bx bx-question-mark" aria-hidden="true"></i> <%= ex.qCount %> <%= __('exercises_list.questions_count') %>
          </p>
        </div>

        <% if (user) { %>
        <a
          href="/exercitii/<%= ex.id %>"
          class="w-full py-3 bg-gray-800 hover:bg-[#a76900] text-white text-center rounded-lg font-bold transition flex items-center justify-center gap-2 group-hover:shadow-lg group-hover:shadow-orange-500/20 focus:outline-none focus:ring-2 focus:ring-[#f59e0b]"
          aria-label="<%= __('exercises_list.btn_start') %>: <%= ex.title %>"
        >
          <%= __('exercises_list.btn_start') %> <i class="bx bx-play text-xl" aria-hidden="true"></i>
        </a>
        <% } else { %>
        <a
          href="/auth"
          class="w-full py-3 bg-gray-800/50 border border-gray-700 text-gray-400 hover:text-white hover:border-gray-500 text-center rounded-lg font-bold transition flex items-center justify-center gap-2 cursor-pointer focus:outline-none focus:ring-2 focus:ring-gray-500"
          aria-label="<%= __('exercises_list.btn_auth') %>"
        >
          <i class="bx bx-lock-alt text-xl" aria-hidden="true"></i> <%= __('exercises_list.btn_auth') %>
        </a>
        <% } %>
      </div>
      <% }) %> 
      
      <% if (exercises.length === 0) { %>
      <div
        class="col-span-full py-20 text-center border border-dashed border-gray-700 rounded-2xl bg-[#1e293b]/50"
      >
        <i class="bx bx-layer text-5xl text-gray-600 mb-4" aria-hidden="true"></i>
        <p class="text-gray-400 font-medium">
          <%= __('exercises_list.empty_title') %>
        </p>
        <p class="text-gray-600 text-sm mt-2"><%= __('exercises_list.empty_hint') %></p>
      </div>
      <% } %>
    </div>
  </div>

  <style>
    @keyframes fadeIn {
      from {
        opacity: 0;
        transform: translateY(10px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
    .animate-fade-in {
      animation: fadeIn 0.4s ease-out forwards;
      opacity: 0;
      /* Calculăm delay-ul bazat pe variabila --i setată în HTML */
      animation-delay: calc(var(--i, 0) * 100ms);
    }
  </style>
</div>
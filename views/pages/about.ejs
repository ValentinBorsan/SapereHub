<div class="w-full min-h-screen bg-[#0f172a] text-white pt-24 pb-20 relative overflow-hidden">
    
    <!-- ELEMENT DECORATIV FUNDAL (Mutat aici pentru a fi relativ la acest container) -->
    <div class="absolute top-0 left-1/2 -translate-x-1/2 w-[800px] h-[400px] bg-[#f59e0b]/10 rounded-full blur-[100px] pointer-events-none z-0" aria-hidden="true"></div>

    <!-- 1. HERO SECTION -->
    <div class="relative z-10 px-4 sm:px-6 lg:px-8 flex flex-col items-center w-full">
        <div class="mx-auto max-w-4xl text-center">
            
            <!-- Badge -->
            <div class="inline-flex items-center rounded-full px-4 py-1.5 text-sm font-medium text-[#f59e0b] ring-1 ring-inset ring-[#f59e0b]/30 bg-[#f59e0b]/10 mb-8 animate-fade-in shadow-[0_0_15px_rgba(245,158,11,0.1)]">
                <span><%= __('about.badge') || 'Povestea Noastră' %></span>
            </div>
            
            <!-- Title -->
            <h1 class="text-4xl sm:text-5xl md:text-6xl font-serif font-bold tracking-tight text-white mb-6 animate-fade-in drop-shadow-lg" style="animation-delay: 100ms;">
                <%= __('about.title_start') || 'Educație din' %> 
                <span class="block sm:inline text-transparent bg-clip-text bg-gradient-to-r from-[#f59e0b] to-orange-500"><%= __('about.title_highlight') || 'Pasiune Pură' %></span>
            </h1>
            
            <!-- Subtitle -->
            <p class="mt-6 text-lg sm:text-xl leading-8 text-gray-300 font-light max-w-2xl mx-auto animate-fade-in" style="animation-delay: 200ms;">
                <%= __('about.subtitle') || 'O platformă dezvoltată individual, la intersecția dintre educație și tehnologie, cu scopul de a face cunoașterea accesibilă tuturor.' %>
            </p>
        </div>
    </div>

    <!-- 2. ORIGINS SECTION -->
    <div class="relative z-10 mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 mt-20 sm:mt-32">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-center">
            
            <!-- Left Card -->
            <div class="relative lg:order-1 animate-fade-in w-full">
                <div class="absolute -inset-1 bg-gradient-to-r from-[#f59e0b]/20 to-blue-600/20 rounded-2xl blur-xl opacity-50" aria-hidden="true"></div>
                
                <div class="relative bg-[#1e293b]/80 backdrop-blur-md ring-1 ring-white/10 rounded-2xl p-6 sm:p-8 shadow-2xl overflow-hidden group hover:ring-[#f59e0b]/30 transition duration-500">
                    
                    <div class="absolute top-0 right-0 p-4 opacity-5 group-hover:opacity-10 transition duration-500 pointer-events-none" aria-hidden="true">
                        <i class='bx bx-code-alt text-8xl sm:text-9xl text-white'></i>
                    </div>
                    
                    <h3 class="text-2xl font-serif font-bold text-white mb-4 relative z-10"><%= __('about.origin.title') || 'De la Curiozitate la Soluție' %></h3>
                    
                    <p class="font-serif italic text-lg text-gray-200 leading-relaxed mb-6 border-l-2 border-[#f59e0b]/50 pl-4 relative z-10">
                        "<%= __('about.origin.quote') || 'Totul a început din pură curiozitate...' %>"
                    </p>
                    
                    <div class="flex items-center gap-4 border-t border-white/5 pt-6 relative z-10">
                        <div class="w-12 h-12 bg-black/30 rounded-full flex items-center justify-center text-[#f59e0b] ring-1 ring-white/10 shrink-0" aria-hidden="true">
                            <i class='bx bx-bulb text-2xl'></i>
                        </div>
                        <div>
                            <p class="text-sm font-bold text-white"><%= __('about.origin.author') || 'Fondator & Dezvoltator' %></p>
                            <p class="text-xs text-gray-400">SaperePlus</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Timeline -->
            <div class="lg:order-2 space-y-10 animate-fade-in w-full" style="animation-delay: 200ms;">
                <div class="pl-6 border-l-2 border-[#f59e0b]/30 space-y-2">
                    <span class="text-[#f59e0b] font-bold text-xs sm:text-sm uppercase tracking-widest">
                        <%= __('about.phase1.label') || 'Începutul' %>
                    </span>
                    <h4 class="text-xl font-serif font-bold text-white"><%= __('about.phase1.title') || 'Inițiativa Locală' %></h4>
                    <p class="text-gray-300 text-sm font-light leading-relaxed"><%= __('about.phase1.desc') %></p>
                </div>

                <div class="pl-6 border-l-2 border-[#f59e0b] space-y-2">
                    <span class="text-[#f59e0b] font-bold text-xs sm:text-sm uppercase tracking-widest">
                        <%= __('about.phase2.label') || 'Prezentul' %>
                    </span>
                    <h4 class="text-xl font-serif font-bold text-white"><%= __('about.phase2.title') || 'Fără Limite' %></h4>
                    <p class="text-gray-300 text-sm font-light leading-relaxed"><%= __('about.phase2.desc') %></p>
                </div>

                <div class="pl-6 border-l-2 border-gray-700 space-y-2 group hover:border-blue-500 transition-colors duration-300">
                    <span class="text-gray-400 group-hover:text-blue-400 font-bold text-xs sm:text-sm uppercase tracking-widest transition-colors">
                        <%= __('about.phase3.label') || 'Viziunea' %>
                    </span>
                    <h4 class="text-xl font-serif font-bold text-white"><%= __('about.phase3.title') || 'Comunitate Globală' %></h4>
                    <p class="text-gray-300 text-sm font-light leading-relaxed"><%= __('about.phase3.desc') %></p>
                </div>
            </div>
        </div>
    </div>

    <!-- 3. MISSION & VALUES -->
    <div class="relative z-10 mt-32 border-y border-white/5 bg-[#020617]/50 py-24 sm:py-32 w-full">
        <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
            <div class="mx-auto max-w-2xl lg:text-center mb-16">
                <h2 class="text-base font-semibold leading-7 text-[#f59e0b] uppercase tracking-wide"><%= __('about.mission.label') || 'Misiunea Noastră' %></h2>
                <p class="mt-2 text-3xl font-serif font-bold tracking-tight text-white sm:text-4xl"><%= __('about.mission.title') || 'Mai mult decât o platformă' %></p>
                <p class="mt-6 text-lg leading-8 text-gray-300 font-light">
                    <%= __('about.mission.desc') %>
                </p>
            </div>

            <div class="mx-auto mt-16 max-w-2xl sm:mt-20 lg:mt-24 lg:max-w-none">
                <dl class="grid max-w-xl grid-cols-1 gap-x-8 gap-y-16 lg:max-w-none lg:grid-cols-3">
                    
                    <!-- Value 1 -->
                    <div class="flex flex-col bg-[#1e293b]/40 p-6 rounded-2xl border border-white/5 hover:bg-[#1e293b] hover:border-[#f59e0b]/30 transition duration-300">
                        <dt class="flex items-center gap-x-3 text-base font-bold leading-7 text-white">
                            <div class="h-10 w-10 flex items-center justify-center rounded-lg bg-[#f59e0b]/10 ring-1 ring-inset ring-[#f59e0b]/20 shrink-0" aria-hidden="true">
                                <i class='bx bx-group text-[#f59e0b] text-xl'></i>
                            </div>
                            <%= __('about.val1.title') || 'Grupuri de Studiu' %>
                        </dt>
                        <dd class="mt-4 flex flex-auto flex-col text-base leading-7 text-gray-400 font-light">
                            <p class="flex-auto"><%= __('about.val1.desc') %></p>
                        </dd>
                    </div>

                    <!-- Value 2 -->
                    <div class="flex flex-col bg-[#1e293b]/40 p-6 rounded-2xl border border-white/5 hover:bg-[#1e293b] hover:border-[#f59e0b]/30 transition duration-300">
                        <dt class="flex items-center gap-x-3 text-base font-bold leading-7 text-white">
                            <div class="h-10 w-10 flex items-center justify-center rounded-lg bg-[#f59e0b]/10 ring-1 ring-inset ring-[#f59e0b]/20 shrink-0" aria-hidden="true">
                                <i class='bx bx-chip text-[#f59e0b] text-xl'></i>
                            </div>
                            <%= __('about.val2.title') || 'Tehnologie Adaptată' %>
                        </dt>
                        <dd class="mt-4 flex flex-auto flex-col text-base leading-7 text-gray-400 font-light">
                            <p class="flex-auto"><%= __('about.val2.desc') %></p>
                        </dd>
                    </div>

                    <!-- Value 3 -->
                    <div class="flex flex-col bg-[#1e293b]/40 p-6 rounded-2xl border border-white/5 hover:bg-[#1e293b] hover:border-[#f59e0b]/30 transition duration-300">
                        <dt class="flex items-center gap-x-3 text-base font-bold leading-7 text-white">
                            <div class="h-10 w-10 flex items-center justify-center rounded-lg bg-[#f59e0b]/10 ring-1 ring-inset ring-[#f59e0b]/20 shrink-0" aria-hidden="true">
                                <i class='bx bx-world text-[#f59e0b] text-xl'></i>
                            </div>
                            <%= __('about.val3.title') || 'Fără Bariere' %>
                        </dt>
                        <dd class="mt-4 flex flex-auto flex-col text-base leading-7 text-gray-400 font-light">
                            <p class="flex-auto"><%= __('about.val3.desc') %></p>
                        </dd>
                    </div>

                </dl>
            </div>
        </div>
    </div>

    <!-- 4. CTA -->
    <div class="relative isolate mt-32 px-4 sm:px-6 py-24 sm:py-32 lg:px-8 w-full">
        <div class="absolute inset-0 -z-10 bg-[radial-gradient(45rem_50rem_at_top,theme(colors.indigo.500),transparent)] opacity-10" aria-hidden="true"></div>
        
        <div class="mx-auto max-w-2xl text-center">
            <h2 class="text-3xl font-serif font-bold tracking-tight text-white sm:text-4xl"><%= __('about.cta.title') %></h2>
            <p class="mx-auto mt-6 max-w-xl text-lg leading-8 text-gray-400 font-light">
                <%= __('about.cta.desc') %>
            </p>
            <div class="mt-10 flex items-center justify-center gap-x-6">
                <% if (user) { %>
                    <a href="/#materii" class="rounded-xl bg-[#a76900] px-6 py-3.5 text-sm font-bold text-white shadow-lg hover:bg-orange-700 transition transform hover:-translate-y-1">
                        <%= __('about.cta.btn_dash') %>
                    </a>
                <% } else { %>
                    <a href="/auth/register" class="rounded-xl bg-[#a76900] px-6 py-3.5 text-sm font-bold text-white shadow-lg hover:bg-orange-700 transition transform hover:-translate-y-1">
                        <%= __('about.cta.btn_start') %>
                    </a>
                    <a href="/auth/login" class="text-sm font-semibold leading-6 text-white hover:text-[#f59e0b] transition">
                        <%= __('about.cta.btn_login') %> <span aria-hidden="true">→</span>
                    </a>
                <% } %>
            </div>
        </div>
    </div>

</div>
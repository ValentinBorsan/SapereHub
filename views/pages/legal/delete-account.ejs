<div class="min-h-screen bg-[#0f172a] text-gray-300 pt-32 pb-20 px-6 flex items-center justify-center">
    <div class="w-full max-w-lg">
        
        <div class="bg-[#1e293b] border border-red-900/50 p-8 rounded-3xl shadow-2xl relative overflow-hidden">
            <!-- Background Warning Effect -->
            <div class="absolute top-0 right-0 w-32 h-32 bg-red-600/10 blur-3xl rounded-full -mr-10 -mt-10"></div>

            <div class="text-center mb-8 relative z-10">
                <div class="w-20 h-20 bg-red-900/20 rounded-full flex items-center justify-center mx-auto mb-6 ring-1 ring-red-500/30">
                    <i class='bx bx-trash text-4xl text-red-500'></i>
                </div>
                <h1 class="text-2xl font-bold text-white mb-2"><%= __('legal.delete.title') %></h1>
                <p class="text-red-300/80 text-sm"><%= __('legal.delete.subtitle') %></p>
            </div>

            <div class="space-y-6 text-sm text-gray-400 relative z-10">
                <p><%= __('legal.delete.desc') %></p>
                
                <ul class="space-y-3 bg-black/20 p-4 rounded-xl border border-white/5">
                    <li class="flex items-start gap-3">
                        <i class='bx bx-check-circle text-gray-500 mt-0.5'></i>
                        <span><%= __('legal.delete.step1') %></span>
                    </li>
                    <li class="flex items-start gap-3">
                        <i class='bx bx-envelope text-gray-500 mt-0.5'></i>
                        <span><%= __('legal.delete.step2') %> <strong class="text-white">support@sapereplus.it</strong></span>
                    </li>
                    <li class="flex items-start gap-3">
                        <i class='bx bx-time text-gray-500 mt-0.5'></i>
                        <span><%= __('legal.delete.step3') %></span>
                    </li>
                </ul>

                <div class="pt-4">
                    <% if (user) { %>
                        <!-- Formularul de È™tergere cu confirmare -->
                        <form action="/api/users/delete-request" method="POST" onsubmit="return confirmDelete()">
                            <button type="submit" class="w-full py-4 bg-red-600 hover:bg-red-700 text-white font-bold rounded-xl transition flex items-center justify-center gap-2 shadow-lg shadow-red-900/20 group">
                                <i class='bx bx-user-x text-xl group-hover:scale-110 transition'></i>
                                <%= __('legal.delete.btn_action') %>
                            </button>
                        </form>
                        
                        <script>
                            function confirmDelete() {
                                return confirm('<%= __('legal.delete.confirm_msg') %>');
                            }
                        </script>
                    <% } else { %>
                        <a href="/auth/login?redirect=/delete-account" class="block w-full py-4 bg-gray-700 hover:bg-gray-600 text-white text-center font-bold rounded-xl transition border border-gray-600">
                            <%= __('legal.delete.btn_login') %>
                        </a>
                    <% } %>
                    <p class="text-center text-xs text-gray-500 mt-4"><%= __('legal.delete.disclaimer') %></p>
                </div>
            </div>
        </div>

        <div class="text-center mt-8">
            <a href="/" class="text-gray-500 hover:text-white text-sm transition flex items-center justify-center gap-2">
                <i class='bx bx-arrow-back'></i> <%= __('category.btn_back_home') %>
            </a>
        </div>
    </div>
</div>
<link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"/>

<div class="min-h-screen bg-[#020617] text-gray-100 pb-32 lg:pb-20 font-sans">
  
  <!-- HEADER STICKY (Compact pe mobil) -->
  <header class="sticky top-0 z-40 bg-[#1e293b]/90 backdrop-blur border-b border-white/5 px-4 lg:px-6 py-3 flex justify-between items-center shadow-lg">
    
    <div class="flex items-center gap-4">
        <button onclick="history.back()" class="w-8 h-8 flex items-center justify-center rounded-lg bg-white/5 hover:bg-white/10 transition text-gray-400 hover:text-white">
            <i class="fas fa-arrow-left"></i>
        </button>
        <div>
            <h1 class="text-sm lg:text-lg font-bold flex items-center gap-2 text-white">
              <span class="text-sapereOrange hidden sm:inline"><%= t('lesson.editor') %></span> 
              <span><%= t('lesson.lesson') %></span>
            </h1>
            <span id="autosave-status" class="text-[10px] text-gray-500 font-medium opacity-0 transition-opacity flex items-center gap-1">
                <i class="fas fa-check-circle text-green-500"></i> Salvat
            </span>
        </div>
    </div>

    <!-- Limbi (Compact) -->
    <div class="bg-black/20 p-1 rounded-lg flex border border-white/5 overflow-hidden">
      <button onclick="switchLang('ro')" id="tab-ro" class="lang-tab px-3 py-1.5 rounded-md text-xs font-bold bg-sapereOrange text-white shadow transition-all">RO</button>
      <button onclick="switchLang('en')" id="tab-en" class="lang-tab px-3 py-1.5 rounded-md text-xs font-bold text-gray-400 hover:text-white transition-all">EN</button>
      <button onclick="switchLang('it')" id="tab-it" class="lang-tab px-3 py-1.5 rounded-md text-xs font-bold text-gray-400 hover:text-white transition-all">IT</button>
    </div>

    <!-- Actions (Ascunse pe mobil mic, mutate jos sau în meniu) -->
    <div class="flex gap-2">
      <button onclick="openAiModal()" class="hidden sm:flex px-3 py-2 bg-gradient-to-r from-purple-600 to-blue-600 text-white font-bold rounded-lg text-xs items-center gap-2 border border-white/10 hover:shadow-lg transition">
        <i class="fas fa-magic"></i> <span class="hidden lg:inline">AI Auto</span>
      </button>

      <button onclick="saveLesson()" id="btn-save" class="px-4 py-2 bg-sapereOrange hover:bg-orange-600 text-white font-bold rounded-lg transition shadow-lg flex items-center gap-2 text-xs lg:text-sm">
        <i class="fas fa-save"></i> <span class="hidden sm:inline"><%= t('lesson.save') %></span>
      </button>
    </div>
  </header>

  <!-- MAIN LAYOUT -->
  <div class="max-w-[1600px] mx-auto mt-6 px-4 lg:px-8 grid grid-cols-1 lg:grid-cols-12 gap-8">
    
    <!-- SIDEBAR: TOOLS (Hidden on Mobile, Visible on Desktop) -->
    <!-- Pe Desktop e coloana stânga. Pe mobil e drawer. -->
    <aside class="hidden lg:block lg:col-span-3 space-y-6">
        <!-- Metadata Panel -->
        <div class="bg-[#1e293b]/50 backdrop-blur p-5 rounded-2xl border border-white/5 shadow-xl">
            <h3 class="text-gray-500 text-[10px] font-bold uppercase tracking-widest mb-4 border-b border-white/5 pb-2"><%= t('lesson.global_settings') %></h3>
            <div class="space-y-4">
                <div>
                    <label class="block text-[10px] font-bold text-gray-400 mb-1 uppercase"><%= t('lesson.category') %></label>
                    <select id="meta-category" class="w-full bg-[#0f172a] border border-gray-700 rounded-lg px-3 py-2.5 text-sm text-white focus:border-sapereOrange outline-none">
                        <option value="Matematică"><%= t('lesson.categories.math') %></option>
                        <option value="Științe"><%= t('lesson.categories.science') %></option>
                        <option value="Istorie"><%= t('lesson.categories.history') %></option>
                        <option value="Geografie"><%= t('lesson.categories.geography') %></option>
                        <option value="Limbi"><%= t('lesson.categories.languages') %></option>
                        <option value="Italiana"><%= t('lesson.categories.italian') %></option>
                        <option value="English"><%= t('lesson.categories.english') %></option>
                        <option value="IT"><%= t('lesson.categories.it') %></option>
                    </select>
                </div>
                <div class="grid grid-cols-2 gap-3">
                    <div>
                        <label class="block text-[10px] font-bold text-gray-400 mb-1 uppercase"><%= t('lesson.level') %></label>
                        <select id="meta-level" class="w-full bg-[#0f172a] border border-gray-700 rounded-lg px-3 py-2.5 text-sm text-white outline-none">
                            <option value="Începător"><%= t('lesson.levels.beginner') %></option>
                            <option value="Intermediar"><%= t('lesson.levels.intermediate') %></option>
                            <option value="Avansat"><%= t('lesson.levels.advanced') %></option>
                        </select>
                    </div>
                    <div>
                        <label class="block text-[10px] font-bold text-gray-400 mb-1 uppercase"><%= t('lesson.time_min') %></label>
                        <input type="number" id="meta-time" value="10" class="w-full bg-[#0f172a] border border-gray-700 rounded-lg px-3 py-2.5 text-sm text-white outline-none text-center font-bold"/>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tools Panel (Sticky Desktop) -->
        <div class="bg-[#1e293b]/50 backdrop-blur p-5 rounded-2xl border border-white/5 shadow-xl sticky top-24">
            <h3 class="text-gray-500 text-[10px] font-bold uppercase tracking-widest mb-4 border-b border-white/5 pb-2"><%= t('lesson.elements') %></h3>
            
            <!-- AI Button Desktop -->
            <button onclick="openAiBlockModal()" class="w-full p-3 mb-4 bg-gradient-to-r from-indigo-600 to-purple-600 hover:from-indigo-500 hover:to-purple-500 border border-purple-400/30 rounded-xl text-left transition flex items-center gap-3 shadow-lg group relative overflow-hidden">
                <div class="absolute inset-0 bg-white/10 translate-x-[-100%] group-hover:translate-x-[100%] transition duration-700"></div>
                <div class="w-8 h-8 rounded-lg bg-white/20 flex items-center justify-center text-white"><i class="fas fa-robot animate-bounce"></i></div>
                <div class="flex flex-col">
                    <span class="text-xs font-bold text-white">Magic Block</span>
                    <span class="text-[9px] text-blue-200">Generează cu AI</span>
                </div>
            </button>

            <div class="grid grid-cols-2 gap-2">
                <button onclick="addBlock('title')" class="p-3 bg-[#0f172a] hover:bg-gray-800 border border-gray-700 hover:border-yellow-500/50 rounded-xl flex flex-col items-center justify-center gap-2 transition group">
                    <i class="fas fa-heading text-yellow-400 text-xl group-hover:scale-110 transition"></i>
                    <span class="text-[10px] font-bold text-gray-400 group-hover:text-white">Titlu</span>
                </button>
                <button onclick="addBlock('paragraph')" class="p-3 bg-[#0f172a] hover:bg-gray-800 border border-gray-700 hover:border-blue-500/50 rounded-xl flex flex-col items-center justify-center gap-2 transition group">
                    <i class="fas fa-paragraph text-blue-400 text-xl group-hover:scale-110 transition"></i>
                    <span class="text-[10px] font-bold text-gray-400 group-hover:text-white">Text</span>
                </button>
                <button onclick="addBlock('formula')" class="p-3 bg-[#0f172a] hover:bg-gray-800 border border-gray-700 hover:border-orange-500/50 rounded-xl flex flex-col items-center justify-center gap-2 transition group">
                    <i class="fas fa-square-root-alt text-orange-400 text-xl group-hover:scale-110 transition"></i>
                    <span class="text-[10px] font-bold text-gray-400 group-hover:text-white">Formulă</span>
                </button>
                <button onclick="addBlock('list')" class="p-3 bg-[#0f172a] hover:bg-gray-800 border border-gray-700 hover:border-purple-500/50 rounded-xl flex flex-col items-center justify-center gap-2 transition group">
                    <i class="fas fa-list-ul text-purple-400 text-xl group-hover:scale-110 transition"></i>
                    <span class="text-[10px] font-bold text-gray-400 group-hover:text-white">Listă</span>
                </button>
                <button onclick="addBlock('definition')" class="p-3 bg-[#0f172a] hover:bg-gray-800 border border-gray-700 hover:border-cyan-500/50 rounded-xl flex flex-col items-center justify-center gap-2 transition group">
                    <i class="fas fa-book text-cyan-400 text-xl group-hover:scale-110 transition"></i>
                    <span class="text-[10px] font-bold text-gray-400 group-hover:text-white">Definiție</span>
                </button>
                <button onclick="addBlock('table')" class="p-3 bg-[#0f172a] hover:bg-gray-800 border border-gray-700 hover:border-green-500/50 rounded-xl flex flex-col items-center justify-center gap-2 transition group">
                    <i class="fas fa-table text-green-400 text-xl group-hover:scale-110 transition"></i>
                    <span class="text-[10px] font-bold text-gray-400 group-hover:text-white">Tabel</span>
                </button>
            </div>
            
            <button onclick="addBlock('resource')" class="w-full mt-2 p-3 bg-[#0f172a] hover:bg-gray-800 border border-gray-700 hover:border-pink-500/50 rounded-xl flex items-center justify-center gap-3 transition group">
                <i class="fas fa-paperclip text-pink-400 group-hover:scale-110 transition"></i>
                <span class="text-xs font-bold text-gray-400 group-hover:text-white">Fișier / Resursă</span>
            </button>

            <div class="mt-4 pt-4 border-t border-white/5">
                <button onclick="addSection()" class="w-full py-3 border-2 border-dashed border-gray-600 hover:border-sapereOrange text-gray-400 hover:text-sapereOrange rounded-xl font-bold transition flex justify-center items-center gap-2 text-xs uppercase tracking-widest">
                    <i class="fas fa-plus-circle"></i> Secțiune Nouă
                </button>
            </div>
        </div>
    </aside>

    <!-- MAIN EDITOR AREA -->
    <main class="lg:col-span-9">
      <!-- Containere Limbi (Identice) -->
      <% ['ro', 'en', 'it'].forEach(lang => { %>
      <div id="container-<%= lang %>" class="lang-container space-y-8 <%= lang === 'ro' ? '' : 'hidden' %>">
        <!-- Title Input -->
        <div class="bg-[#1e293b]/50 backdrop-blur p-6 rounded-2xl border border-white/5 shadow-lg group focus-within:border-sapereOrange/50 transition">
          <input type="text" id="title-<%= lang %>" placeholder="<%= t('lesson.lesson_title') %> (<%= lang.toUpperCase() %>)" class="w-full bg-transparent text-3xl lg:text-4xl font-bold text-white placeholder-gray-600 border-none focus:ring-0 outline-none mb-2 font-serif" oninput="triggerAutosave()"/>
          <input type="text" id="subtitle-<%= lang %>" placeholder="<%= t('lesson.short_subtitle') %>" class="w-full bg-transparent text-lg text-gray-400 placeholder-gray-600 border-none focus:ring-0 outline-none font-light italic" oninput="triggerAutosave()"/>
        </div>
        
        <!-- Sections Container -->
        <div id="sections-<%= lang %>" class="space-y-8 min-h-[400px] pb-24"></div>
        
        <!-- Empty State Helper -->
        <div id="empty-state-<%= lang %>" class="text-center py-10 border-2 border-dashed border-gray-800 rounded-2xl">
            <p class="text-gray-600 mb-4">Începe prin a adăuga o secțiune</p>
            <button onclick="addSection()" class="px-6 py-2 bg-gray-800 hover:bg-gray-700 rounded-lg text-sm text-gray-300 transition">Adaugă Secțiune</button>
        </div>
      </div>
      <% }) %>
    </main>
  </div>

  <!-- MOBILE TOOLS DRAWER (Sertar de jos pentru mobil) -->
  <div id="mobile-tools-drawer" class="lg:hidden fixed bottom-0 left-0 w-full bg-[#1e293b] border-t border-white/10 rounded-t-3xl z-50 transform translate-y-[110%] transition-transform duration-300 shadow-2xl">
      <div class="p-2 flex justify-center" onclick="toggleMobileDrawer()">
          <div class="w-12 h-1.5 bg-gray-600 rounded-full"></div>
      </div>
      <div class="p-5 max-h-[70vh] overflow-y-auto">
          <div class="flex justify-between items-center mb-6">
              <h3 class="text-sm font-bold text-white uppercase tracking-wider">Unelte Editor</h3>
              <button onclick="toggleMobileDrawer()" class="p-2 bg-gray-800 rounded-full text-gray-400"><i class="fas fa-times"></i></button>
          </div>
          
          <!-- Copie a butoanelor pentru mobil -->
          <div class="grid grid-cols-3 gap-3 mb-6">
              <button onclick="addBlock('paragraph'); toggleMobileDrawer()" class="aspect-square bg-[#0f172a] rounded-xl flex flex-col items-center justify-center gap-1 border border-gray-700 active:scale-95 transition">
                  <i class="fas fa-paragraph text-blue-400 text-xl"></i>
                  <span class="text-[10px] text-gray-400">Text</span>
              </button>
              <button onclick="addBlock('title'); toggleMobileDrawer()" class="aspect-square bg-[#0f172a] rounded-xl flex flex-col items-center justify-center gap-1 border border-gray-700 active:scale-95 transition">
                  <i class="fas fa-heading text-yellow-400 text-xl"></i>
                  <span class="text-[10px] text-gray-400">Titlu</span>
              </button>
              <button onclick="openAiBlockModal(); toggleMobileDrawer()" class="aspect-square bg-gradient-to-br from-purple-900 to-indigo-900 rounded-xl flex flex-col items-center justify-center gap-1 border border-purple-500/30 active:scale-95 transition relative overflow-hidden">
                  <i class="fas fa-robot text-white text-xl animate-pulse"></i>
                  <span class="text-[10px] text-white font-bold">AI</span>
              </button>
              <button onclick="addBlock('definition'); toggleMobileDrawer()" class="aspect-square bg-[#0f172a] rounded-xl flex flex-col items-center justify-center gap-1 border border-gray-700 active:scale-95 transition">
                  <i class="fas fa-book text-cyan-400 text-xl"></i>
                  <span class="text-[10px] text-gray-400">Definiție</span>
              </button>
              <button onclick="addBlock('list'); toggleMobileDrawer()" class="aspect-square bg-[#0f172a] rounded-xl flex flex-col items-center justify-center gap-1 border border-gray-700 active:scale-95 transition">
                  <i class="fas fa-list-ul text-purple-400 text-xl"></i>
                  <span class="text-[10px] text-gray-400">Listă</span>
              </button>
              <button onclick="addBlock('table'); toggleMobileDrawer()" class="aspect-square bg-[#0f172a] rounded-xl flex flex-col items-center justify-center gap-1 border border-gray-700 active:scale-95 transition">
                  <i class="fas fa-table text-green-400 text-xl"></i>
                  <span class="text-[10px] text-gray-400">Tabel</span>
              </button>
          </div>

          <button onclick="addSection(); toggleMobileDrawer()" class="w-full py-4 border-2 border-dashed border-gray-600 text-white rounded-xl font-bold flex justify-center items-center gap-2">
              <i class="fas fa-plus-circle text-sapereOrange"></i> Secțiune Nouă
          </button>
      </div>
  </div>

  <!-- FAB (Floating Action Button) pentru Mobil -->
  <button onclick="toggleMobileDrawer()" class="lg:hidden fixed bottom-6 right-6 w-14 h-14 bg-sapereOrange text-white rounded-full shadow-2xl shadow-orange-500/40 flex items-center justify-center z-40 hover:scale-110 transition active:scale-95">
      <i class="fas fa-plus text-2xl"></i>
  </button>

</div>

<!-- AI MODAL -->
<div id="modal-ai-generator" class="fixed inset-0 z-[100] flex items-center justify-center bg-black/80 backdrop-blur-sm hidden animate-fade-in px-4">
  <div class="bg-[#1e293b] w-full max-w-lg rounded-2xl shadow-2xl border border-gray-700 overflow-hidden">
      <div class="bg-gradient-to-r from-purple-900 to-blue-900 p-6 border-b border-gray-700">
          <h3 class="text-xl font-bold text-white flex items-center gap-2"><i class="fas fa-magic text-yellow-400"></i> Auto-Create Lesson</h3>
          <button onclick="closeAiModal()" class="absolute top-4 right-4 text-gray-400 hover:text-white">&times;</button>
      </div>
      <div class="p-6 space-y-4">
          <div>
              <label class="text-xs font-bold text-gray-400 uppercase mb-2 block">Subiect</label>
              <input type="text" id="ai-topic" class="w-full bg-[#0f172a] border border-gray-600 rounded-xl px-4 py-3 text-white outline-none focus:border-purple-500">
          </div>
          <div class="grid grid-cols-2 gap-4">
            <div>
              <label class="text-xs font-bold text-gray-400 uppercase mb-2 block">Ton</label>
              <select id="ai-tone" class="w-full bg-[#0f172a] border border-gray-600 rounded-xl px-4 py-3 text-white outline-none"><option value="educational">Academic</option><option value="friendly">Prietenos</option></select>
            </div>
            <div>
               <label class="text-xs font-bold text-gray-400 uppercase mb-2 block">Secțiuni</label>
               <input type="number" id="ai-sections" value="3" class="w-full bg-[#0f172a] border border-gray-600 rounded-xl px-4 py-3 text-white outline-none">
            </div>
          </div>
          <button onclick="generateLessonAI()" id="btn-generate-ai" class="w-full py-4 bg-purple-600 hover:bg-purple-500 text-white font-bold rounded-xl shadow-lg transition">Generează</button>
      </div>
  </div>
</div>

<div id="modal-ai-block" class="fixed inset-0 z-[110] flex items-center justify-center bg-black/80 backdrop-blur-sm hidden px-4">
    <div class="bg-[#1e293b] w-full max-w-md rounded-xl shadow-2xl border border-purple-500/50 p-6 animate-fade-in">
        <h3 class="text-lg font-bold text-white mb-4 flex items-center gap-2"><i class="fas fa-magic text-purple-400"></i> AI Block Wizard</h3>
        <textarea id="ai-block-prompt" rows="3" class="w-full bg-[#0f172a] border border-gray-600 rounded-lg p-3 text-white focus:border-purple-500 outline-none mb-4" placeholder="Descrie ce bloc vrei (ex: tabel cu 3 coloane...)"></textarea>
        <div class="flex justify-end gap-3">
            <button onclick="document.getElementById('modal-ai-block').classList.add('hidden')" class="px-4 py-2 text-gray-400 text-sm">Anulează</button>
            <button onclick="generateBlockAI()" id="btn-create-block-ai" class="px-4 py-2 bg-purple-600 text-white rounded-lg text-sm font-bold">Generează</button>
        </div>
    </div>
</div>

<!-- TEMPLATES -->
<template id="tpl-section">
  <div class="section-card bg-[#1e293b]/50 backdrop-blur rounded-2xl border border-white/5 overflow-hidden mb-8 transition-all duration-300 hover:border-sapereOrange/30 shadow-lg group/section animate-fade-in-up">
    <div class="bg-[#0f172a]/50 p-4 border-b border-white/5 flex items-center justify-between">
      <div class="flex items-center gap-3 w-full">
        <div class="bg-sapereOrange/20 text-sapereOrange w-8 h-8 flex items-center justify-center rounded-lg font-bold cursor-move handle">#</div>
        <input type="text" class="section-title-input w-full bg-transparent text-white font-bold text-lg placeholder-gray-600 border-none focus:ring-0 outline-none" placeholder="<%= t('lesson.section_title_placeholder') %>" oninput="triggerAutosave()"/>
      </div>
      <div class="flex items-center gap-1 opacity-50 group-hover/section:opacity-100 transition">
        <button onclick="moveSectionUp(this)" class="text-gray-400 hover:text-white p-2 hover:bg-white/10 rounded-lg"><i class="fas fa-chevron-up"></i></button>
        <button onclick="moveSectionDown(this)" class="text-gray-400 hover:text-white p-2 hover:bg-white/10 rounded-lg"><i class="fas fa-chevron-down"></i></button>
        <div class="h-4 w-px bg-white/10 mx-1"></div>
        <button onclick="removeElement(this, 'section')" class="text-red-400 hover:text-red-300 p-2 hover:bg-red-500/20 rounded-lg"><i class="fas fa-trash"></i></button>
      </div>
    </div>
    <div class="blocks-container p-4 lg:p-6 space-y-4 min-h-[100px]" onclick="setActiveSection(this.closest('.section-card'))"></div>
  </div>
</template>

<!-- Block Templates (Styled Cards) -->
<template id="tpl-block-title">
  <div class="block-item title-block bg-[#0f172a] rounded-xl border border-gray-700 overflow-hidden shadow-sm hover:border-yellow-500/50 transition group">
    <div class="bg-gray-800/50 px-4 py-2 border-b border-gray-700 flex justify-between items-center handle cursor-grab">
      <span class="text-[10px] font-bold text-yellow-400 uppercase tracking-wider flex items-center gap-2"><i class="fas fa-grip-lines"></i> Titlu</span>
      <div class="flex gap-1 opacity-0 group-hover:opacity-100 transition">
          <button onclick="moveBlockUp(this)" class="text-gray-400 hover:text-white p-1"><i class="fas fa-arrow-up"></i></button>
          <button onclick="moveBlockDown(this)" class="text-gray-400 hover:text-white p-1"><i class="fas fa-arrow-down"></i></button>
          <button onclick="removeElement(this, 'block')" class="text-red-400 hover:text-white p-1"><i class="fas fa-times"></i></button>
      </div>
    </div>
    <div class="p-4"><input type="text" class="block-title-input w-full bg-transparent text-white font-bold text-xl placeholder-gray-600 focus:border-b border-yellow-400 outline-none pb-2" placeholder="Titlu..." oninput="triggerAutosave()"/></div>
  </div>
</template>

<template id="tpl-block-paragraph">
  <div class="block-item paragraph bg-[#0f172a] rounded-xl border border-gray-700 overflow-hidden shadow-sm hover:border-blue-500/50 transition group">
    <div class="bg-gray-800/50 px-4 py-2 border-b border-gray-700 flex justify-between items-center handle cursor-grab">
      <span class="text-[10px] font-bold text-blue-400 uppercase tracking-wider flex items-center gap-2"><i class="fas fa-grip-lines"></i> Text</span>
      <div class="flex gap-1 opacity-0 group-hover:opacity-100 transition">
          <button onclick="moveBlockUp(this)" class="text-gray-400 hover:text-white p-1"><i class="fas fa-arrow-up"></i></button>
          <button onclick="moveBlockDown(this)" class="text-gray-400 hover:text-white p-1"><i class="fas fa-arrow-down"></i></button>
          <button onclick="removeElement(this, 'block')" class="text-red-400 hover:text-white p-1"><i class="fas fa-times"></i></button>
      </div>
    </div>
    <div class="quill-editor-container bg-transparent text-gray-300 min-h-[100px]"></div>
  </div>
</template>

<!-- (Restul template-urilor rămân similare ca structură dar cu clasele noi: bg-[#0f172a], rounded-xl, etc.) -->
<template id="tpl-block-definition">
  <div class="block-item definition bg-[#0f172a] rounded-xl border-l-4 border-cyan-500 overflow-hidden hover:bg-gray-900 transition group my-2">
    <div class="p-4 grid gap-2 relative">
      <div class="absolute top-2 right-2 flex gap-1 opacity-0 group-hover:opacity-100 transition">
          <button onclick="removeElement(this, 'block')" class="text-red-400 hover:text-white p-1"><i class="fas fa-times"></i></button>
      </div>
      <input type="text" class="def-term w-full bg-transparent text-cyan-400 font-bold placeholder-gray-600 focus:outline-none" placeholder="Termen" oninput="triggerAutosave()"/>
      <textarea class="def-desc w-full bg-transparent text-gray-400 text-sm focus:outline-none resize-none" rows="2" placeholder="Definiție..." oninput="triggerAutosave()"></textarea>
    </div>
  </div>
</template>

<template id="tpl-block-list">
    <div class="block-item list bg-[#0f172a] rounded-xl border border-gray-700 p-4 group">
        <div class="flex justify-between mb-2 border-b border-gray-800 pb-2">
            <span class="text-[10px] text-purple-400 font-bold uppercase">Listă</span>
            <button onclick="removeElement(this, 'block')" class="text-red-400 text-xs opacity-0 group-hover:opacity-100"><i class="fas fa-trash"></i></button>
        </div>
        <ul class="list-items-container space-y-2 mb-3"></ul>
        <button onclick="addListItem(this)" class="text-xs bg-purple-500/10 text-purple-400 hover:bg-purple-500 hover:text-white px-3 py-1.5 rounded transition"><i class="fas fa-plus"></i> Adaugă</button>
    </div>

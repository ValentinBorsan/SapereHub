<div class="min-h-screen bg-[#0f172a] pb-20">
    
    <header class="bg-[#1e293b] border-b border-gray-800 pt-12 pb-16 px-4 mb-12 relative overflow-hidden">
        
        <!-- WINTER ACCENT: Decorativ Colț -->
        <div class="absolute -top-6 -right-6 text-[8rem] opacity-5 rotate-12 pointer-events-none select-none text-white" aria-hidden="true">❄️</div>

        <div class="max-w-7xl mx-auto relative z-10 text-center">
            <span class="text-[#f59e0b] font-bold tracking-widest uppercase text-sm mb-3 block"><%= __('nav.subjects') %></span>
            <h1 class="text-4xl md:text-5xl font-bold text-white mb-4 flex items-center justify-center gap-3">
                <%= categoryName %>
            </h1>
            <p class="text-gray-400 text-lg max-w-2xl mx-auto"><%= __('category.subtitle') %></p>
        </div>
        <!-- WINTER ACCENT: Blur ușor mai cald/auriu -->
        <div class="absolute top-0 left-1/2 -translate-x-1/2 w-[800px] h-[400px] bg-gradient-to-r from-[#f59e0b]/5 to-red-600/5 rounded-full blur-3xl pointer-events-none" aria-hidden="true"></div>
    </header>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        
        <% if (lessons && lessons.length > 0) { %>
            
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                <% lessons.forEach(lesson => { %>
                    <% 
                        // --- LOGICĂ TRADUCERE PENTRU CARD ---
                        // Determinăm limba curentă (ex: 'ro', 'en', 'it')
                        const currentLangCode = (typeof activeLang !== 'undefined' && activeLang.name) ? activeLang.name.toLowerCase() : 'ro';
                        
                        // 1. Traducere Titlu & Subtitlu
                        let displayTitle = lesson.title;
                        let displaySubtitle = lesson.subtitle;

                        if (lesson.content && typeof lesson.content === 'object' && !Array.isArray(lesson.content)) {
                            if (lesson.content[currentLangCode] && lesson.content[currentLangCode].title) {
                                displayTitle = lesson.content[currentLangCode].title;
                                displaySubtitle = lesson.content[currentLangCode].subtitle || "";
                            } 
                            else if (lesson.content['ro'] && lesson.content['ro'].title) {
                                displayTitle = lesson.content['ro'].title;
                                displaySubtitle = lesson.content['ro'].subtitle || "";
                            }
                        }

                        // 2. Traducere Nivel (Mapare valoare DB -> Cheie traducere)
                        const levelMapping = {
                            'Începător': 'lesson.levels.beginner',
                            'Intermediar': 'lesson.levels.intermediate',
                            'Avansat': 'lesson.levels.advanced'
                        };
                        
                        // Dacă găsim o cheie de mapare, o traducem, altfel afișăm valoarea din DB
                        let displayLevel = levelMapping[lesson.level] ? __(levelMapping[lesson.level]) : lesson.level;
                    %>

                    <a href="/lectie/<%= lesson.id %>" aria-label="Citeste lectia: <%= displayTitle %>" class="group bg-[#1e293b] border border-gray-700 rounded-2xl overflow-hidden hover:border-[#f59e0b] hover:-translate-y-1 transition-all duration-300 shadow-lg focus:outline-none focus:ring-2 focus:ring-[#f59e0b]">
                        <div class="p-8">
                            <div class="flex justify-between items-start mb-4">
                                <!-- Afișăm nivelul tradus -->
                                <span class="px-3 py-1 bg-blue-500/10 text-blue-400 text-xs font-bold rounded-full uppercase border border-blue-500/20"><%= displayLevel %></span>
                                <span class="text-gray-500 text-xs flex items-center gap-1">
                                    <i class='bx bx-time-five' aria-hidden="true"></i> <%= lesson.read_time %> <%= __('lesson.min_read') %>
                                </span>
                            </div>
                            
                            <!-- Folosim variabila calculată displayTitle -->
                            <h3 class="text-xl font-bold text-white mb-3 group-hover:text-[#f59e0b] transition"><%= displayTitle %></h3>
                            
                            <!-- Folosim variabila calculată displaySubtitle -->
                            <% if (displaySubtitle) { %>
                                <p class="text-gray-400 text-sm line-clamp-2 mb-6"><%= displaySubtitle %></p>
                            <% } %>
                            
                            <div class="flex items-center text-sm font-medium text-[#f59e0b] group-hover:underline decoration-2 underline-offset-4">
                                <%= __('category.read_lesson') %> <i class='bx bx-right-arrow-alt ml-1 transform group-hover:translate-x-1 transition' aria-hidden="true"></i>
                            </div>
                        </div>
                    </a>
                <% }) %>
            </div>

        <% } else { %>
            
            <div class="text-center py-20 bg-[#1e293b]/50 border-2 border-dashed border-gray-700 rounded-3xl">
                <div class="w-24 h-24 bg-gray-800 rounded-full flex items-center justify-center mx-auto mb-6" aria-hidden="true">
                    <i class='bx bx-layer text-4xl text-gray-500'></i>
                </div>
                <h2 class="text-2xl font-bold text-white mb-2"><%= __('category.empty_title') %></h2>
                <p class="text-gray-400 max-w-md mx-auto mb-8"><%= __('category.empty_desc') %></p>
                <a href="/" class="px-6 py-3 bg-gray-700 hover:bg-gray-600 text-white rounded-lg transition inline-flex items-center gap-2">
                    <i class='bx bx-home' aria-hidden="true"></i> <%= __('category.btn_back_home') %>
                </a>
            </div>

        <% } %>

    </div>
</div>
<div class="min-h-screen bg-[#0f172a] text-white pt-24 pb-20 px-6 lg:px-8">
    <div class="mx-auto max-w-2xl text-center mb-16">
        <h2 class="text-3xl font-serif font-bold tracking-tight text-white sm:text-4xl"><%= __('contact.title') %></h2>
        <p class="mt-2 text-lg leading-8 text-gray-400"><%= __('contact.subtitle') %></p>
    </div>

    <form action="/contact" method="POST" class="mx-auto max-w-xl bg-[#1e293b]/50 p-8 rounded-2xl border border-white/5 backdrop-blur-sm shadow-xl" aria-label="Formular contact">
        
        <% if (locals.success) { %>
            <div role="alert" class="mb-6 p-4 rounded-lg bg-green-500/10 border border-green-500/20 text-green-400 text-sm font-medium flex items-center gap-2">
                <i class='bx bx-check-circle text-xl' aria-hidden="true"></i> <%= success %>
            </div>
        <% } %>

        <% if (locals.error) { %>
            <div role="alert" class="mb-6 p-4 rounded-lg bg-red-500/10 border border-red-500/20 text-red-400 text-sm font-medium flex items-center gap-2">
                <i class='bx bx-error-circle text-xl' aria-hidden="true"></i> <%= error %>
            </div>
        <% } %>

        <div class="grid grid-cols-1 gap-x-8 gap-y-6 sm:grid-cols-2">
            <div>
                <label for="first-name" class="block text-sm font-semibold leading-6 text-white"><%= __('contact.form.firstname') %></label>
                <div class="mt-2.5">
                    <input type="text" name="firstName" id="first-name" autocomplete="given-name" aria-required="true" class="block w-full rounded-md border-0 bg-white/5 px-3.5 py-2 text-white shadow-sm ring-1 ring-inset ring-white/20 focus:ring-2 focus:ring-inset focus:ring-[#f59e0b] sm:text-sm sm:leading-6" required>
                </div>
            </div>
            <div>
                <label for="last-name" class="block text-sm font-semibold leading-6 text-white"><%= __('contact.form.lastname') %></label>
                <div class="mt-2.5">
                    <input type="text" name="lastName" id="last-name" autocomplete="family-name" aria-required="true" class="block w-full rounded-md border-0 bg-white/5 px-3.5 py-2 text-white shadow-sm ring-1 ring-inset ring-white/20 focus:ring-2 focus:ring-inset focus:ring-[#f59e0b] sm:text-sm sm:leading-6" required>
                </div>
            </div>
            <div class="sm:col-span-2">
                <label for="email" class="block text-sm font-semibold leading-6 text-white"><%= __('contact.form.email') %></label>
                <div class="mt-2.5">
                    <input type="email" name="email" id="email" autocomplete="email" aria-required="true" class="block w-full rounded-md border-0 bg-white/5 px-3.5 py-2 text-white shadow-sm ring-1 ring-inset ring-white/20 focus:ring-2 focus:ring-inset focus:ring-[#f59e0b] sm:text-sm sm:leading-6" required>
                </div>
            </div>
            <div class="sm:col-span-2">
                <label for="message" class="block text-sm font-semibold leading-6 text-white"><%= __('contact.form.message') %></label>
                <div class="mt-2.5">
                    <textarea name="message" id="message" rows="4" aria-required="true" class="block w-full rounded-md border-0 bg-white/5 px-3.5 py-2 text-white shadow-sm ring-1 ring-inset ring-white/20 focus:ring-2 focus:ring-inset focus:ring-[#f59e0b] sm:text-sm sm:leading-6" required></textarea>
                </div>
            </div>
        </div>
        <div class="mt-10">
            <button type="submit" class="block w-full rounded-md bg-[#a76900] px-3.5 py-2.5 text-center text-sm font-semibold text-white shadow-sm hover:bg-orange-700 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-[#f59e0b] transition transform hover:-translate-y-0.5">
                <%= __('contact.form.btn_send') %>
            </button>
        </div>
    </form>
</div>
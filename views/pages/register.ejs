<div class="flex min-h-screen">
    
    <div class="hidden lg:flex lg:w-1/2 bg-[#0f172a] relative flex-col justify-center items-center px-12 xl:px-20 overflow-hidden text-center">
        <!-- Background elements preserved -->
        <div class="absolute top-0 left-0 w-full h-full pointer-events-none">
            <div class="absolute bottom-[10%] right-[10%] w-[400px] h-[400px] bg-[#a76900]/10 rounded-full blur-[100px]"></div>
            <div class="absolute top-[10%] left-[10%] w-[500px] h-[500px] bg-purple-600/5 rounded-full blur-[120px]"></div>
        </div>

        <div class="relative z-10 flex flex-col items-center">
            <img src="/images/logo-sapere.png" alt="SaperePlus" class="h-32 md:h-40 mb-10 object-contain drop-shadow-2xl hover:scale-105 transition duration-500" />
            
            <h1 class="text-4xl xl:text-5xl font-bold text-white mb-6 leading-tight font-serif tracking-wide">
                <%= __('register.brand_title') %>
            </h1>
            
            <p class="text-lg text-gray-400 leading-relaxed max-w-lg mx-auto">
                <%= __('register.brand_subtitle') %>
            </p>

            <div class="mt-12 flex gap-3 opacity-50">
                <div class="w-4 h-1 bg-gray-600 rounded-full"></div>
                <div class="w-16 h-1 bg-[#a76900] rounded-full"></div>
                <div class="w-4 h-1 bg-gray-600 rounded-full"></div>
            </div>
        </div>
    </div>

    <div class="w-full lg:w-1/2 flex items-center justify-center bg-[#1e293b] p-8 md:p-12 relative border-l border-gray-800 overflow-y-auto">
        
        <div class="w-full max-w-[420px] space-y-8 my-auto">
            
            <div class="lg:hidden text-center mb-8">
                <img src="/images/logo-sapere.png" alt="Logo" class="h-16 mx-auto mb-4">
            </div>

            <div class="text-center lg:text-left">
                <h2 class="text-3xl font-bold text-white mb-2"><%= __('register.title') %></h2>
                <p class="text-gray-400 text-sm"><%= __('register.subtitle') %></p>
            </div>

            <% if (locals.error) { %>
                <div class="bg-red-500/10 border border-red-500/50 text-red-400 px-4 py-3 rounded-xl text-sm flex items-center gap-3" role="alert">
                    <svg class="w-5 h-5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                    <span><%= error %></span>
                </div>
            <% } %>

            <form action="/auth/register" method="POST" class="space-y-5">
                
                <div class="space-y-1.5">
                    <label for="reg-name" class="text-xs font-bold text-gray-400 uppercase ml-1"><%= __('register.name_label') %></label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                            <svg class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path></svg>
                        </div>
                        <input id="reg-name" type="text" name="name" class="w-full pl-11 pr-4 py-3.5 bg-[#0f172a] border border-gray-700 rounded-xl text-white placeholder-gray-600 focus:border-[#a76900] focus:ring-1 focus:ring-[#a76900] outline-none transition shadow-sm" placeholder="<%= __('register.name_placeholder') %>" required aria-label="<%= __('register.name_label') %>">
                    </div>
                </div>

                <div class="space-y-1.5">
                    <label for="reg-email" class="text-xs font-bold text-gray-400 uppercase ml-1"><%= __('register.email_label') %></label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                            <svg class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path></svg>
                        </div>
                        <input id="reg-email" type="email" name="email" class="w-full pl-11 pr-4 py-3.5 bg-[#0f172a] border border-gray-700 rounded-xl text-white placeholder-gray-600 focus:border-[#a76900] focus:ring-1 focus:ring-[#a76900] outline-none transition shadow-sm" placeholder="<%= __('register.email_placeholder') %>" required aria-label="<%= __('register.email_label') %>">
                    </div>
                </div>

                <div class="space-y-1.5">
                    <label for="reg-pass" class="text-xs font-bold text-gray-400 uppercase ml-1"><%= __('register.password_label') %></label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                            <svg class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path></svg>
                        </div>
                        <input id="reg-pass" type="password" name="password" class="w-full pl-11 pr-4 py-3.5 bg-[#0f172a] border border-gray-700 rounded-xl text-white placeholder-gray-600 focus:border-[#a76900] focus:ring-1 focus:ring-[#a76900] outline-none transition shadow-sm" placeholder="<%= __('register.password_placeholder') %>" required minlength="6" aria-label="<%= __('register.password_label') %>">
                    </div>
                </div>

                <div class="space-y-1.5">
                    <label for="reg-confirm-pass" class="text-xs font-bold text-gray-400 uppercase ml-1"><%= __('register.confirm_password_label') %></label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                            <svg class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                        </div>
                        <input id="reg-confirm-pass" type="password" name="confirm_password" class="w-full pl-11 pr-4 py-3.5 bg-[#0f172a] border border-gray-700 rounded-xl text-white placeholder-gray-600 focus:border-[#a76900] focus:ring-1 focus:ring-[#a76900] outline-none transition shadow-sm" placeholder="<%= __('register.confirm_password_placeholder') %>" required aria-label="<%= __('register.confirm_password_label') %>">
                    </div>
                </div>

                <button type="submit" class="w-full py-3.5 px-4 bg-[#a76900] hover:bg-orange-700 text-white font-bold rounded-xl shadow-lg shadow-orange-900/20 transition-all transform hover:-translate-y-0.5 active:scale-95 duration-200">
                    <%= __('register.submit_btn') %>
                </button>
            </form>

            <div class="relative flex py-2 items-center">
                <div class="flex-grow border-t border-gray-700"></div>
                <span class="flex-shrink-0 mx-4 text-gray-500 text-sm"><%= __('register.or_divider') %></span>
                <div class="flex-grow border-t border-gray-700"></div>
            </div>

            <a href="/auth/google" class="flex items-center justify-center w-full py-3.5 px-4 bg-white hover:bg-gray-50 text-gray-800 font-bold rounded-xl transition shadow-sm group border border-transparent hover:border-gray-300 transform hover:-translate-y-0.5 active:scale-95 duration-200">
                <svg class="w-5 h-5 mr-3" viewBox="0 0 24 24" aria-hidden="true">
                    <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4"/>
                    <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/>
                    <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"/>
                    <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/>
                </svg>
                <%= __('register.google_btn') %>
            </a>

            <p class="text-center text-gray-400 text-sm">
                <%= __('register.have_account') %> 
                <a href="/auth/login" class="text-[#a76900] font-bold hover:underline transition ml-1"><%= __('register.login_link') %></a>
            </p>

        </div>
    </div>
</div>